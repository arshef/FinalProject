<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/creditcard_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/creditcard"
        app:layout_constraintBottom_toTopOf="@id/bill_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bill_btn"
        android:layout_width="95dp"
        android:layout_height="110dp"
        android:background="@drawable/bill"
        app:layout_constraintBottom_toTopOf="@id/news_btn"
        app:layout_constraintLeft_toLeftOf="@id/creditcard_btn"
        app:layout_constraintRight_toRightOf="@id/creditcard_btn"
        app:layout_constraintTop_toBottomOf="@id/creditcard_btn" />

    <ImageButton
        android:id="@+id/news_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/newspaper_420020"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/creditcard_btn"
        app:layout_constraintRight_toRightOf="@id/creditcard_btn"
        app:layout_constraintTop_toBottomOf="@id/bill_btn"
        android:layout_marginBottom="50dp"/>
</android.support.constraint.ConstraintLayout>